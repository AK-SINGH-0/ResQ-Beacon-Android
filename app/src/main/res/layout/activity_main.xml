<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <!-- HEADER BACKGROUND -->
        <View
            android:id="@+id/viewHeader"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#B71C1C"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/todo"
            android:src="@android:drawable/ic_lock_idle_alarm"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/resq_beacon"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            app:layout_constraintBottom_toBottomOf="@+id/iconLogo"
            app:layout_constraintStart_toEndOf="@+id/iconLogo"
            app:layout_constraintTop_toTopOf="@+id/iconLogo" />

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ultimate_safety"
            android:textColor="#E0E0E0"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/iconLogo"
            app:layout_constraintTop_toBottomOf="@+id/tvAppName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Ankush Kumar Singh"
            android:textColor="#FFCDD2"
            android:textSize="11sp"
            android:textStyle="italic"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/iconLogo"
            app:layout_constraintTop_toBottomOf="@+id/tvSlogan"/>

        <!-- SOS BUTTON -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnPanic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="90dp"
            app:cardElevation="16dp"
            app:strokeWidth="4dp"
            app:strokeColor="#FFEBEE"
            app:rippleColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconLogo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS"
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRESS NOW"
                    android:textColor="#FFCDD2"
                    android:textSize="10sp"
                    android:letterSpacing="0.2"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvToolsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TACTICAL TOOLS"
            android:textColor="#757575"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPanic"/>

        <!-- GRID -->
        <GridLayout
            android:id="@+id/layoutFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvToolsHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ROW 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnSiren"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#FF9800"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_silent_mode_off"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tvSirenLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIREN"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStrobe"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#3949AB"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tvStrobeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STROBE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROW 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnFakeCall"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#546E7A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/sym_action_call"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tvFakeCallLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAKE CALL"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHospitals"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#00897B"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAFE SPOTS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROW 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHelpline"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#D81B60"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HELPLINES"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnTips"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#7B1FA2"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAFETY TIPS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROW 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnImSafe"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_columnSpan="2"
                android:layout_margin="6dp"
                app:cardBackgroundColor="#43A047"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_idle_low_battery"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MARK AS SAFE (NOTIFY ALL)"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- SETTINGS ICON (NOW AT THE VERY BOTTOM OF XML = TOP OF SCREEN) -->
        <!-- Note the translationZ and elevation -->

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_preferences"
            android:translationZ="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSetupContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Manage Emergency Contacts"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconTint="#FFFFFF"
            app:cornerRadius="100dp"
            app:backgroundTint="#263238"
            app:layout_constraintTop_toBottomOf="@+id/layoutFeatures"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>