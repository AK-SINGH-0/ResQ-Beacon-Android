<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SECTION 1: CUSTOM FAVORITES (NEW) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Speed Dial"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Call â€¢ Long Press to Edit"
            android:textSize="12sp"
            android:textColor="#FD00AD"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- FAVORITE 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFav1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#221F81">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#09851A"/>
                    <TextView
                        android:id="@+id/tvFav1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Add"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvFav1Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Empty)"
                        android:textSize="10sp"
                        android:textColor="#4CAF50"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAVORITE 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFav2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#221F81">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#088C15"/>
                    <TextView
                        android:id="@+id/tvFav2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to Add"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/tvFav2Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Empty)"
                        android:textSize="10sp"
                        android:textColor="#4CAF50"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- SECTION 2: NATIONAL NUMBERS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Services"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:layout_marginBottom="12dp"/>

        <!-- UNIVERSAL -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card112"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#D32F2F">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency (India)"
                        android:textColor="#FFCDD2"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="112"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="32sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#FFFFFF"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- POLICE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPolice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Police"
                        android:textColor="#546E7A"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="#78909C"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#455A64"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AMBULANCE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAmbulance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambulance"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="108"
                        android:textColor="#E57373"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#D32F2F"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- WOMEN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWomen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Women's Helpline"
                        android:textColor="#7B1FA2"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1091"
                        android:textColor="#BA68C8"
                        android:textSize="16sp"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#7B1FA2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>